.search {
  background: #ff2d4a;
  padding: 20rpx;
}

.search-input {
  background: #fff;
  height: 60rpx;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 12px;
}

.search-input icon {
  margin-right: 4px;
}

.swiper {
  height: 340rpx;
}

.swiper image {
  width: 750rpx;
  height: 340rpx;
}

.menus {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 5rpx;
}

.menus image {
  /* 测量图片等比例宽高 */
  width: 128rpx;
  height: 140rpx;
}

.floor {
  margin-bottom: 20px;
}

.floor-title {
  width: 100%;
  height: 60rpx;
}

.floor-content {
  display: flex;
  justify-content: space-between;
  padding: 15rpx;
}

.floor-content-left {
  margin-right: 12rpx;
}

.floor-content-left image {
  width: 232rpx;
  height: 386rpx;
}

.floor-content-right {
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.floor-content-right image {
  width: 233rpx;
  height: 188rpx;
}

.floor + .floor .floor-content-right image {
  width: 193rpx;
}

/* 兄弟选择器 */

.floor + .floor .floor-content-right image:nth-child(3n + 1) {
  width: 273rpx;
}
